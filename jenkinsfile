pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/ayoubebn/devops_project.git'
            }
        }
        stage('Pull Latest Changes') {
            steps {
                script {
                    sh 'git pull origin master'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t devops-node-app .'
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    // Stop any existing container and start the new one
                    sh 'docker stop devops-node-app || true && docker rm devops-node-app || true'
                    sh 'docker run -d --name devops-node-app -p 3000:3000 devops-node-app'
                }
            }
        }
    }
}